<% if @project %>
<h1><%=@project.name%> - Tasks</h1>
<% end %>

<table id="tasks_list">
  <thead>
    <tr>
      <th>Name</th>
      <% unless @project %><th>Project</th><% end %>
      <th>Assignee</th>
      <th>Due Date</th>
      <th>Completed?</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, task_path(task) %></td>
        <% unless @project %><td><%= link_to task.project.name, project_path(task.project) %></td><% end %>
        <td><%= task.assignee.name %></td>
        <td><%= task.due_date.strftime("%b %d, %Y") %></td>
        <td><%= task.completed_date ? task.completed_date.strftime("%b %d, %Y") : "Not Yet" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
